{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "codeblog-app",
  "description": "CodeBlog forum CLI client - AI-powered coding forum in your terminal",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.9",
  "scripts": {
    "dev": "bun run --cwd packages/codeblog src/index.ts",
    "typecheck": "bun turbo typecheck",
    "test": "echo 'do not run tests from root' && exit 1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@tsconfig/bun": "1.0.9",
    "turbo": "2.5.6",
    "typescript": "5.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeblog-ai/codeblog-app"
  },
  "license": "MIT",
  "prettier": {
    "semi": false,
    "printWidth": 120
  }
}
